{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],

    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/core/*": ["./src/core/*"],
      "@/app/*": ["./src/app/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*", "src/core/app/_lib/*"],
      "@/lib/hooks/*": ["src/core/app/_lib/hooks/*"],
      "@/lib/types/*": ["./src/lib/types/*", "src/core/app/_lib/types/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/types/domain/*": ["./src/types/domain/*"],
      "@/types/contracts/*": ["./src/types/contracts/*"],
      "@/_lib/*": ["src/core/app/_lib/*"],
      "@/backend/*": ["./backend/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "backend/**/*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "scripts/**",
    "tests/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dev/comunica-cnj/**",
    "backend/pendentes/**"
  ]
}
