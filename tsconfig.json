{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "ignoreDeprecations": "6.0",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["types/*"],
      "@/types/domain/*": ["types/domain/*"],
      "@/types/contracts/*": ["types/contracts/*"],
      "@/_lib/*": ["app/_lib/*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/backend/*": ["backend/*"],
      "@/lib/*": ["lib/*", "app/_lib/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "scripts/**",
    "tests/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dev/comunica-cnj/**",
    "backend/pendentes/**"
  ]
}
