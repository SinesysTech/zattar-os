{
  "css.customData": [".vscode/css-custom-data.json"],
  "css.lint.unknownAtRules": "ignore",
  "webhint.enableHints": {
    "no-inline-styles": "off"
  },
  "vscode-edge-devtools.webhint": false,
  "vscode-edge-devtools.mirrorEdits": false,
  // Desabilitar MCP Chrome DevTools (causa erros)
  "github.copilot.chat.mcp.enabled": true,
  "github.copilot.chat.mcp.servers": {
    "chromedevtools/chrome-devtools-mcp": {
      "enabled": false
    }
  },
  // Configuração para extensão Lua ignorar arquivos de licença e documentação
  "Lua.workspace.ignoreDir": ["LICENSE", "TRADEMARK", "NOTICE"],
  "Lua.diagnostics.globals": [],
  // Associação de arquivos sem extensão como texto plano
  "files.associations": {
    "LICENSE": "plaintext",
    "TRADEMARK": "plaintext",
    "NOTICE": "plaintext",
    "AGENTS": "markdown"
  },
  // TypeScript: usar tsconfig.test.json para arquivos de teste
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Excluir arquivos de configuração problemáticos do TypeScript e arquivos temporários
  "files.exclude": {
    "**/node_modules/@copilotkit/**/tsconfig.json": true,
    "**/AppData/Local/Temp/**": true
  },
  "files.watcherExclude": {
    "**/node_modules/@copilotkit/**/tsconfig.json": true,
    "**/AppData/Local/Temp/**": true
  },
  // Ignorar erros de TypeScript em arquivos de configuração dentro de node_modules
  "typescript.validate.enable": true,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  // Excluir arquivos temporários da validação do TypeScript
  "typescript.tsserver.exclude": [
    "**/AppData/Local/Temp/**"
  ],
  // Desabilitar validação MSSQL para migrations do Supabase (são PostgreSQL)
  "files.exclude": {
    "**/node_modules/@copilotkit/**/tsconfig.json": true,
    "**/AppData/Local/Temp/**": true
  },
  // Associar migrations Supabase como PostgreSQL, não MSSQL
  "[sql]": {
    "files.associations": {
      "**/supabase/migrations/**/*.sql": "postgres"
    }
  },
  // Excluir pasta supabase da análise MSSQL
  "mssql.excludeFolders": [
    "**/supabase/**",
    "**/node_modules/**"
  ],
  // Desabilitar validação MSSQL globalmente para arquivos .sql
  "mssql.enableSqlDiagnostics": false,
  // Associar arquivos SQL no diretório supabase como PostgreSQL
  "files.associations": {
    "**/supabase/**/*.sql": "postgres",
    "LICENSE": "plaintext",
    "TRADEMARK": "plaintext",
    "NOTICE": "plaintext",
    "AGENTS": "markdown"
  }
}
