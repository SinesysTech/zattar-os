{
  "webhint.enableHints": {
    "no-inline-styles": "off"
  },
  "vscode-edge-devtools.webhint": false,
  "vscode-edge-devtools.mirrorEdits": false,
  // Configuração para extensão Lua ignorar arquivos de licença e documentação
  "Lua.workspace.ignoreDir": ["LICENSE", "TRADEMARK", "NOTICE"],
  "Lua.diagnostics.globals": [],
  // Associação de arquivos sem extensão como texto plano
  "files.associations": {
    "LICENSE": "plaintext",
    "TRADEMARK": "plaintext",
    "NOTICE": "plaintext",
    "AGENTS": "markdown"
  },
  // TypeScript: usar tsconfig.test.json para arquivos de teste
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Excluir arquivos de configuração problemáticos do TypeScript
  "files.exclude": {
    "**/node_modules/@copilotkit/**/tsconfig.json": true
  },
  "files.watcherExclude": {
    "**/node_modules/@copilotkit/**/tsconfig.json": true
  },
  // Ignorar erros de TypeScript em arquivos de configuração dentro de node_modules
  "typescript.validate.enable": true,
  "typescript.preferences.includePackageJsonAutoImports": "off"
}
