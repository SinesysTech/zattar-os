{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/jest-dom.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
